@model Caser.Models.Cases

@{
    ViewData["Title"] = "View";
}

<h1>Ticket: @Model.CaseId</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaseId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseSubject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaseSubject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaseDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseContactName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaseContactName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseContactPhone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaseContactPhone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseIntComment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaseIntComment)
        </dd>
    </dl>
</div>
@if (@Model.CaseIsFinished == true)
{

    <div>
        <a class="btn btn-primary" asp-action="FinishedCases">Back to List</a>
        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.CaseId">Delete</a>
    </div>
}
else
{
    <div>
        <a class="btn btn-primary" asp-action="Index">Back to List</a>
        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model.CaseId">Delete</a>
        <a asp-action="CloseCases" class="btn btn-success" asp-route-id="@Model.CaseId">Close Case</a>
    </div>
}