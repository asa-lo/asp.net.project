@model Caser.Models.Cases

@{
    ViewData["Title"] = "Closing case";
}

<h1>Ticket: @Model.CaseId</h1>

<h4>Are you sure you want to close this case?</h4>
<h5>When you close a case, it can't be reopened.</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseSubject)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaseSubject)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaseDesc)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CustId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CaseIntComment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CaseIntComment)
        </dd>
    </dl>

    @if (Model.CaseIsFinished == true)
    {
        <form>
            <input type="hidden" asp-for="CaseId" />
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        <form asp-action="CloseCases">
            <input type="hidden" asp-for="CaseId" />
            <input type="submit" value="Close case" class="btn btn-success" />
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
        </form>
    }
</div>
